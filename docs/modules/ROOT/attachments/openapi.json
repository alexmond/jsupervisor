          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the process was started"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the process ended"
          },
          "exitCode": {
            "type": "integer",
            "format": "int32",
